{% extends 'base.html.twig' %}

{% block title %}Hello PageAvisController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<div class="menu-contact">
			<div class="contact-titre">
				<h1 class="titre-contact">Contact</h1>
			</div>
			<div class="" contact-barre>
				<hr>
			</div>
			{% if app.user %}
				{{ form_start(form) }}
				<div class="contact-infosa">
					<input class="input-email" {#name="{{ field_name(form.dateDemande) }}"#} type="text" placeholder="E-mail..." required>
					<input class="input-objet" {#name="{{ field_name(form.objetDemande) }}"#} type="text" placeholder="Objet..." required>
				</div>
				<div class="contact-infosb">
					<input class="input-telephone" {#name="{{ field_name(form.enfant) }}"#} type="text" placeholder="Telephone..." required>
					<input class="input-nom" {#name="{{ field_name(form.idDemandeUser) }}"#} type="text" placeholder="Nom..." required>
				</div>
				<div class="contact-commentaire">
					<p>Commentaire</P>
				</div>
				<div class="contact-infosc">
					<textarea class="textarea-commentaire" {#name="{{ field_name(form.descriptionDemande) }}"#} id="commentaire" name="commentaire" placeholder="Entrez du texte ici..." required></textarea>
				</div>
				<div class="contact-bouton">
					<button class="submit-button" type="submit">Submit</button>
				</div>
				{{ form_end(form) }}
			{% else %}
				<p>Vous devez vous connecter pour faire une demande de contact</p>
			{% endif %}
		</div>

		{% if form_errors(form) %}
			<div class="alert alert-danger">
				{{ form_errors(form) }}
			</div>
		{% endif %}

	</div>


{% endblock %}
